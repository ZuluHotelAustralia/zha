			sleep(1);
			Resurrect( com4 );
			FixColor( com4 );
			SetStamina(com4, Cint(GetMaxStamina(com4) / 10));
			SetHp(com4, Cint(GetMaxHp(com4) / 10));
			SetMana(com4, Cint(GetMaxMana(com4) / 10));
			CheckResRobe(com4);
			MoveCharacterToLocation( com4, x, y, z );
		endif
	endif
	endif
	if(com5.dead)
