			SetHp(com3, Cint(GetMaxHp(com3) / 10));
			SetMana(com3, Cint(GetMaxMana(com3) / 10));
			CheckResRobe(com3);
			MoveCharacterToLocation( com3, x, y, z );
		endif
	endif
