                  SPELL_EFFECT_ID,
                  SPELL_EFFECT_SPEED,
                  SPELL_EFFECT_LOOP);
			PlaySoundEffect( com3, 0x1F8 );
			sleep(1);
			Resurrect( com3 );
			FixColor( com3 );
